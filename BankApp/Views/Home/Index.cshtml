@{
    ViewData["Title"] = "Welcome to BankApp";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    body {
        background: linear-gradient(to right, #f3f4f6, #d1d8e0);
        font-family: 'Segoe UI', sans-serif;
        transition: background 0.5s, color 0.5s;
    }

    body.dark-mode {
        background: #2a2a2a;
        color: #e0e0e0;
    }

    .btn-glow {
        background: linear-gradient(90deg, #1e90ff, #00bfff);
        color: white;
        font-weight: bold;
        border-radius: 25px;
        transition: 0.3s;
        padding: 10px 30px;
    }

    .btn-glow:hover {
        background: linear-gradient(90deg, #ff6347, #ff4500);
        transform: scale(1.05);
    }

    .text-center {
        margin-top: 50px;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg">
                <div class="card-header text-center">
                    <h2>@ViewData["Title"]</h2>
                    <p class="text-muted">Welcome to the BankApp. Please sign up or log in to continue.</p>
                </div>
                <div class="card-body text-center">
                    <!-- Sign Up Button -->
                    <a href="@Url.Action("Register", "Home")" class="btn btn-glow mb-3">Sign Up</a>
                    <p class="text-muted">Already have an account? <a href="@Url.Action("Login", "Home")">Log in</a></p>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const toggle = document.getElementById('darkModeToggle');
    toggle.addEventListener('change', () => {
        document.body.classList.toggle('dark-mode');
    });
</script>