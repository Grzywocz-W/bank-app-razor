@{
    ViewData["Title"] = "Start";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
<link href="https://fonts.googleapis.com/css2?family=Poppins:wght@600&display=swap"
      rel="stylesheet"/> <!-- Nowoczesna czcionka Poppins -->

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html, body {
        height: 100%;
        width: 100%;
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(145deg, #373b3e 30%, #4a3d9e);
        color: white;
    }

    .nav-custom {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 30px 60px;
        font-weight: 500;
    }

    .nav-logo {
        font-family: 'Poppins', sans-serif;
        color: white;
        font-size: 1.5rem;
    }

    .nav-links a {
        color: white;
        margin-right: 25px;
        text-decoration: none;
        font-size: 1rem;
        transition: color 0.3s;
    }

    .nav-links a:hover {
        color: #7fffd4;
    }

    .btn-signup {
        border: 1px solid white;
        padding: 8px 20px;
        border-radius: 25px;
        color: white;
        text-decoration: none;
        transition: 0.3s;
    }

    .btn-signup:hover {
        background: transparent;
        color: #6c63ff;
    }

    .hero-section {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 100px 60px;
        max-width: 100%;
    }

    .hero-text {
        max-width: 50%;
    }

    .tagline {
        color: #7fffd4;
        font-weight: bold;
        font-size: 0.9rem;
        margin-bottom: 10px;
        text-transform: uppercase;
    }

    .hero-section h1 {
        font-size: 3.5rem;
        font-weight: bold;
        margin-bottom: 20px;
    }

    .hero-section p {
        font-size: 1.2rem;
        margin-bottom: 30px;
        line-height: 1.5;
        color: #e0e0ff;
    }

    .btn-main {
        background: #5b76ff;
        border: none;
        border-radius: 30px;
        padding: 12px 30px;
        font-weight: bold;
        margin-right: 15px;
        color: white;
        transition: 0.3s;
    }

    .btn-main:hover {
        background: #ff6b81;
        transform: scale(1.05);
    }

    .learn-more {
        margin-top: 60px;
        font-size: 0.9rem;
        color: #d0f0ff;
    }

    .learn-more a {
        color: #7fffd4;
        text-decoration: underline;
    }

    .learn-more a:hover {
        color: white;
    }

    .graphic-container {
        max-width: 40%;
        height: auto;
        margin-left: 50px;
    }

    .graphic-container img {
        width: 100%;
        height: auto;
        border-radius: 0;
        box-shadow: none;
    }
</style>

<!-- Navigation -->
<div class="nav-custom">
    <div class="nav-logo">
        <h4><i class=""></i> BankApp</h4>
    </div>
    <div class="nav-links">
        <a href="#about">About</a>
        <a href="#product">Product</a>
        <a href="#pricing">Pricing</a>
        <a href="@Url.Action("Register", "Client")" class="btn-signup">Sign up</a>
    </div>
</div>

<!-- Hero Section -->
<div class="hero-section">
    <div class="hero-text">
        <div class="tagline">
            <i class="fas fa-piggy-bank"></i> Start saving your money
        </div>
        <h1>Payments have never been easier</h1>
        <p>
            Discover the easiest way to manage your personal finances. Save, analyse, invest, withdraw, send and receive
            money all over the world with no limits!
        </p>
        <div class="d-flex align-items-center">
            <a href="@Url.Action("Register", "Client")" class="btn btn-main">Get started</a>
            <a href="#" class="text-white ms-3"><i class="fa fa-download me-2"></i>Download App</a>
        </div>

        <div class="learn-more">
            Learn more about digital banking <a href="#">here</a>.
        </div>
    </div>

    <!-- Graphic Container -->
    <div class="graphic-container">
        <img src="images/cards_image.png" alt="Banking Graphic">
    </div>
</div>
