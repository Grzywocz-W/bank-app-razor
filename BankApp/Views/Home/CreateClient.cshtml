@{
    ViewData["Title"] = "Create Client";
}

<div class="text-center">
    <h1 class="display-4">Create Client</h1>

    <form method="post" asp-action="CreateClient" class="form-signin">
        <div class="form-group">
            <label for="login">Login</label>
            <input type="text" id="login" name="login" class="form-control" placeholder="Enter your login" required />
        </div>
        <div class="form-group">
            <label for="password">Password</label>
            <input type="password" id="password" name="password" class="form-control" placeholder="Enter your password" required />
        </div>

        <button type="submit" class="btn btn-primary">Create Client</button>
    </form>

    @if (ViewData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger mt-3">
            @ViewData["ErrorMessage"]
        </div>
    }

    @if (ViewData["SuccessMessage"] != null)
    {
        <div class="alert alert-success mt-3">
            @ViewData["SuccessMessage"]
        </div>
    }
</div>