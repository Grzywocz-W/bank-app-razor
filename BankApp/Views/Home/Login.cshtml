@model BankApp.DTOs.ClientRequest

@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    body {
        background: linear-gradient(to right, #f3f4f6, #d1d8e0);
        font-family: 'Segoe UI', sans-serif;
        transition: background 0.5s, color 0.5s;
    }

    body.dark-mode {
        background: #2a2a2a;
        color: #e0e0e0;
    }

    .card {
        border: none;
        border-radius: 15px;
        background: white;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
        transition: background 0.5s, box-shadow 0.5s;
    }

    body.dark-mode .card {
        background: #383838;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.3);
    }

    .form-control {
        border-radius: 10px;
        padding: 12px;
        background-color: #f4f6f9;
        border: 1px solid #ccc;
        transition: background-color 0.3s;
    }

    body.dark-mode .form-control {
        background-color: #505050;
        color: #f4f4f4;
        border: 1px solid #888;
    }

    .btn-glow {
        background: linear-gradient(90deg, #1e90ff, #00bfff);
        color: white;
        font-weight: bold;
        border-radius: 25px;
        transition: 0.3s;
        padding: 10px 30px;
    }

    .btn-glow:hover {
        background: linear-gradient(90deg, #ff6347, #ff4500);
        transform: scale(1.05);
    }

    .input-icon {
        position: relative;
    }

    .input-icon i {
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
        color: #888;
    }

    .input-icon input {
        padding-left: 35px;
    }
</style>

<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-md-6 col-lg-4">
            <div class="card shadow-lg">
                <div class="card-header">
                    <h2>@ViewData["Title"]</h2>
                    <p class="text-muted">Please enter your credentials to log in</p>
                </div>
                <div class="card-body">
                    <form asp-action="Login" method="post">
                        <div class="form-group mb-3">
                            <label for="Login">Login</label>
                            <div class="input-icon">
                                <i class="fa fa-user"></i>
                                <input type="text" class="form-control" id="Login" name="Login" />
                            </div>
                        </div>

                        <div class="form-group mb-4">
                            <label for="Password">Password</label>
                            <div class="input-icon">
                                <i class="fa fa-lock"></i>
                                <input type="password" class="form-control" id="Password" name="Password" />
                            </div>
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-glow">Log in</button>
                        </div>
                    </form>

                    <div class="text-center mt-3">
                        <p>Don't have an account? <a href="@Url.Action("Register", "Home")">Sign Up</a></p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
    const toggle = document.getElementById('darkModeToggle');
    toggle.addEventListener('change', () => {
        document.body.classList.toggle('dark-mode');
    });
</script>
