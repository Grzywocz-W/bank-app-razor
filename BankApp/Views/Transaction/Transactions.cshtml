@model List<BankApp.DTOs.TransactionResponse>

@{
    ViewData["Title"] = $"Transactions for Account {ViewData["AccountId"]}";
    var currentAccountId = Convert.ToInt32(ViewData["AccountId"]);
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(145deg, #373b3e 30%, #4a3d9e);
        color: white;
    }

    .main-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding-top: 60px;
        padding-left: 20px;
        padding-right: 20px;
    }

    .card {
        border: none;
        border-radius: 20px;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(15px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
        color: white;
        margin-bottom: 15px;
    }

    .btn-glow-secondary {
        background: rgba(255, 255, 255, 0.15);
        color: white;
        font-weight: bold;
        border-radius: 25px;
        padding: 10px 30px;
        border: none;
        transition: 0.3s;
        text-decoration: none;
        display: inline-block;
    }

    .btn-glow-secondary:hover {
        background: rgba(255, 255, 255, 0.3);
        color: white;
        transform: scale(1.03);
        text-decoration: none;
    }

    .card-body {
        padding: 20px;
    }

    .card-header h2 {
        font-size: 1.8rem;
        margin-bottom: 5px;
    }

    a {
        color: #c9c9ff;
    }

    a:hover {
        text-decoration: underline;
        color: #ffffff;
    }

    .transaction-type {
        font-weight: bold;
    }

    .withdrawal {
        color: #ff6b81;
    }

    .transfer-out {
        color: #ff6b81;
    }

    .transfer-in {
        color: #7fffd4;
    }

    .transaction-amount {
        font-size: 1.2rem;
    }
</style>

<div class="main-wrapper">
    <div class="col-md-8 col-lg-6">
        <div class="card p-4">
            <div class="card-header text-center bg-transparent border-0">
                <h2>@ViewData["Title"]</h2>
            </div>

            <div class="text-center mt-4">
                <a href="@Url.Action("MyAccounts", "Client")" class="btn-glow-secondary">Back to My Accounts</a>
            </div>

            <div class="card-body">
                @if (!Model.Any())
                {
                    <div class="text-center">
                        <p>No transactions found for this account.</p>
                    </div>
                }
                else
                {
                    @foreach (var t in Model)
                    {
                        var isWithdrawal = t.ToAccountId == null;
                        var isTransferIn = t.ToAccountId == currentAccountId;
                        var isTransferOut = t.FromAccountId == currentAccountId;

                        var typeLabel = "";
                        var typeClass = "";

                        if (isWithdrawal)
                        {
                            typeLabel = "Withdrawal";
                            typeClass = "withdrawal";
                        }
                        else if (isTransferOut)
                        {
                            typeLabel = $"Transfer out to account {t.ToAccountId}";
                            typeClass = "transfer-out";
                        }
                        else if (isTransferIn)
                        {
                            typeLabel = $"Transfer in from account {t.FromAccountId}";
                            typeClass = "transfer-in";
                        }
                        else
                        {
                            typeLabel = "Transfer";
                            typeClass = "";
                        }

                        <div class="card mb-3">
                            <div class="card-body">
                                <div><span class="transaction-type @typeClass">@typeLabel</span></div>
                                <div class="transaction-amount">@t.Amount @t.Currency</div>
                                <div><strong>Date:</strong> @t.TransactionDate.ToString("g")</div>
                            </div>
                        </div>
                    }
                }
            </div>
        </div>
    </div>
</div>
