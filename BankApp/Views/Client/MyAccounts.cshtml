@{
    var clientId = ViewData["ClientId"] as string;
    ViewData["Title"] = "Your Accounts";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    * {
        margin: 0;
        padding: 0;
        box-sizing: border-box;
    }

    html, body {
        height: 100%;
        width: 100%;
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(145deg, #373b3e 30%, #4a3d9e);
        color: white;
    }

    .main-wrapper {
        min-height: 100vh;
        display: flex;
        flex-direction: column;
        justify-content: flex-start;
        padding: 30px;
        align-items: center;
    }

    .card-custom {
        width: 100%;
        max-width: 800px;
        background-color: #ffffff;
        border-radius: 15px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        padding: 30px;
        margin-bottom: 20px;
        color: #333;
    }

    h2 {
        text-align: center;
        margin-bottom: 30px;
        font-size: 2rem;
        color: #495057;
        font-weight: 600;
    }

    .action-buttons {
        display: flex;
        gap: 15px;
        flex-wrap: wrap;
        justify-content: center;
        margin-bottom: 30px;
    }

    .btn-custom {
        border-radius: 25px;
        font-weight: bold;
        padding: 12px 30px;
        font-size: 0.9rem;
        background-color: #6c757d;
        color: white;
        border: none;
        transition: all 0.3s ease;
    }

    .btn-custom:hover {
        background-color: #5a6268;
        transform: scale(1.05);
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.1);
    }

    .btn-success {
        background-color: #28a745;
    }

    .btn-danger {
        background-color: #dc3545;
    }

    .btn-warning {
        background-color: #ffc107;
    }

    .account-card {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 12px;
        margin-bottom: 15px;
        box-shadow: 0 2px 12px rgba(0, 0, 0, 0.1);
    }

    .account-card .card-title {
        font-weight: 600;
        font-size: 1.2rem;
        color: #495057;
    }

    .account-card .card-body {
        font-size: 1rem;
        color: #495057;
    }

    .form-control {
        border-radius: 10px;
        padding: 12px;
        background-color: #f1f3f5;
        border: 1px solid #ced4da;
        color: #495057;
        font-size: 1rem;
        transition: all 0.3s ease;
    }

    .form-control:focus {
        background-color: #ffffff;
        border-color: #80bdff;
        box-shadow: 0 0 0 0.2rem rgba(38, 143, 255, 0.25);
    }
</style>

<div class="main-wrapper">
    <div class="card-custom">
        <h2>@ViewData["Title"]</h2>

        <div class="action-buttons">
            <a href="@Url.Action("CreateAccount", "Account")" class="btn btn-success btn-sm btn-custom">
                <i class="fa fa-plus"></i> Create New Account
            </a>

            @if (clientId != null)
            {
                <form asp-controller="Client" asp-action="Logout" method="post">
                    <button type="submit" class="btn btn-danger btn-sm btn-custom">
                        <i class="fa fa-sign-out-alt"></i> Logout
                    </button>
                </form>

                <form asp-controller="Client" asp-action="Delete" method="post">
                    <button type="submit" class="btn btn-danger btn-sm btn-custom"
                            onclick="return confirm('Are you sure you want to delete your client account? This action is irreversible!');">
                        <i class="fa fa-user-slash"></i> Delete Account
                    </button>
                </form>
            }
        </div>

        <div class="account-cards-container">
            @foreach (var account in Model)
            {
                <div class="account-card">
                    <div class="card-title">Account ID: @account.AccountId</div>
                    <div class="card-body">
                        <p><strong>Balance:</strong> @account.Balance @account.Currency</p>

                        <div class="d-flex gap-2 mt-3">
                            <button class="btn btn-danger btn-sm btn-custom" data-bs-toggle="modal" data-bs-target="#withdrawModal@account.AccountId">
                                <i class="fa fa-arrow-down"></i> Withdraw
                            </button>

                            <button class="btn btn-primary btn-sm btn-custom" data-bs-toggle="modal" data-bs-target="#transferModal@account.AccountId">
                                <i class="fa fa-exchange-alt"></i> Transfer
                            </button>

                            <form asp-controller="Account" asp-action="DeleteAccount" method="post">
                                <input type="hidden" name="accountId" value="@account.AccountId" />
                                <button type="submit" class="btn btn-warning btn-sm btn-custom"
                                        onclick="return confirm('Are you sure you want to delete this account?');">
                                    <i class=""></i> Delete Account
                                </button>
                            </form>
                        </div>
                    </div>
                </div>

                <!-- Withdraw Modal -->
                <div class="modal fade" id="withdrawModal@account.AccountId" tabindex="-1" aria-labelledby="withdrawModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="withdrawModalLabel">Withdraw from Account @account.AccountId</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form asp-controller="Account" asp-action="Withdraw" method="post">
                                    <input type="hidden" name="id" value="@account.AccountId" />
                                    <input type="number" name="amount" placeholder="Amount" class="form-control" step="0.01" min="0.01" max="1000000000000" required />
                                    <button type="submit" class="btn btn-danger btn-sm btn-custom">Withdraw</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Transfer Modal -->
                <div class="modal fade" id="transferModal@account.AccountId" tabindex="-1" aria-labelledby="transferModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                        <div class="modal-content">
                            <div class="modal-header">
                                <h5 class="modal-title" id="transferModalLabel">Transfer from Account @account.AccountId</h5>
                                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                            </div>
                            <div class="modal-body">
                                <form asp-controller="Account" asp-action="Transfer" method="post">
                                    <input type="hidden" name="fromId" value="@account.AccountId" />
                                    <input type="number" name="toId" placeholder="To Account ID" class="form-control" required />
                                    <input type="number" name="amount" placeholder="Amount" class="form-control" step="0.01" min="0.01" max="1000000000000" required />
                                    <button type="submit" class="btn btn-primary btn-sm btn-custom">Transfer</button>
                                </form>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>