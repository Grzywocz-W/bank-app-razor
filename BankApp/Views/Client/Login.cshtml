@model BankApp.DTOs.LoginRequest

@{
    ViewData["Title"] = "Login";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet"/>
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(145deg, #373b3e 30%, #4a3d9e) fixed;
        color: white;
        overflow-x: hidden;
    }

    .main-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding-top: 60px;
        padding-left: 20px;
        padding-right: 20px;
    }

    .card {
        border: none;
        border-radius: 20px;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(15px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
        transition: background 0.5s, box-shadow 0.5s;
        color: white;
    }

    .form-control {
        border-radius: 10px;
        padding: 12px;
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid #666;
        color: white;
        transition: background-color 0.3s ease, color 0.3s ease, border-color 0.3s ease, box-shadow 0.3s ease;
    }

    .form-control::placeholder {
        color: #bbb;
    }

    .btn-glow {
        background: linear-gradient(90deg, #6a3d9e, #8e44ad);
        color: white;
        font-weight: bold;
        border-radius: 25px;
        padding: 10px 30px;
        border: none;
        transition: 0.3s;
    }

    .btn-glow:hover {
        background: #ff6b81;
        transform: scale(1.05);
    }

    .input-icon {
        position: relative;
    }

    .input-icon i {
        position: absolute;
        left: 10px;
        top: 50%;
        transform: translateY(-50%);
        color: #aaa;
    }

    .input-icon input {
        padding-left: 35px;
    }

    .card-header h2 {
        font-size: 1.8rem;
        margin-bottom: 5px;
    }

    .card-header p {
        color: white !important;
        font-size: 0.95rem;
        margin-bottom: 0;
    }

    a {
        color: #c9c9ff;
    }

    a:hover {
        text-decoration: underline;
        color: #ffffff;
    }
</style>

<div class="main-wrapper">
    <div class="col-md-6 col-lg-4">
        <div class="card p-4">
            <div class="card-header text-center bg-transparent border-0">
                <h2>@ViewData["Title"]</h2>
                <p>Please enter your credentials to log in</p>
            </div>
            <div class="card-body">
                <form asp-action="Login" method="post">
                    <div class="form-group mb-3">
                        <label for="Login">Login</label>
                        <div class="input-icon">
                            <i class="fa fa-user"></i>
                            <input type="text" class="form-control" id="Login" name="Login"
                                   placeholder="Enter login" value="@Model?.Login" />
                        </div>
                    </div>

                    <div class="form-group mb-4">
                        <label for="Password">Password</label>
                        <div class="input-icon">
                            <i class="fa fa-lock"></i>
                            <input type="password" class="form-control" id="Password" name="Password"
                                   placeholder="Enter password" value="@Model?.Password" />
                        </div>
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-glow">Log in</button>
                    </div>
                </form>

                <div class="text-center mt-3">
                    <p>Don't have an account? <a href="@Url.Action("Register", "Client")">Sign Up</a></p>
                </div>
            </div>
        </div>
    </div>
</div>
