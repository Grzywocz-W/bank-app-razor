@using BankApp
@using BankApp.Models
@using Microsoft.AspNetCore.Mvc.TagHelpers
@model BankApp.DTOs.AccountRequest
@{
    ViewData["Title"] = "Create New Account";
}

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
<link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" />

<style>
    html, body {
        height: 100%;
        margin: 0;
        font-family: 'Segoe UI', sans-serif;
        background: linear-gradient(145deg, #373b3e 30%, #4a3d9e);
        color: white;
    }

    .btn-glow-secondary {
        background: rgba(255, 255, 255, 0.15);
        color: white;
        font-weight: bold;
        border-radius: 25px;
        padding: 10px 30px;
        border: none;
        transition: 0.3s;
        text-decoration: none;
        display: inline-block;
    }

    .btn-glow-secondary:hover {
        background: rgba(255, 255, 255, 0.3);
        color: white;
        transform: scale(1.03);
        text-decoration: none;
    }

    .main-wrapper {
        min-height: 100vh;
        display: flex;
        align-items: flex-start;
        justify-content: center;
        padding-top: 60px;
        padding-left: 20px;
        padding-right: 20px;
    }

    .card {
        border: none;
        border-radius: 20px;
        background: rgba(255, 255, 255, 0.05);
        backdrop-filter: blur(15px);
        box-shadow: 0 8px 30px rgba(0, 0, 0, 0.3);
        color: white;
    }

    .form-control {
        border-radius: 10px;
        padding: 12px;
        background-color: rgba(255, 255, 255, 0.1);
        border: 1px solid #666;
        color: white;
    }

    .form-control::placeholder {
        color: #bbb;
    }

    .btn-glow {
        background: linear-gradient(90deg, #6a3d9e, #8e44ad);
        color: white;
        font-weight: bold;
        border-radius: 25px;
        padding: 10px 30px;
        border: none;
        transition: 0.3s;
    }

    .btn-glow:hover {
        background: #ff6b81;
        transform: scale(1.05);
    }

    .card-header h2 {
        font-size: 1.8rem;
        margin-bottom: 5px;
    }

    a {
        color: #c9c9ff;
    }

    a:hover {
        text-decoration: underline;
        color: #ffffff;
    }
</style>

<div class="main-wrapper">
    <div class="col-md-6 col-lg-4">
        <div class="card p-4">
            <div class="card-header text-center bg-transparent border-0">
                <h2>@ViewData["Title"]</h2>
                <p>Provide details to create a new account</p>
            </div>
            <div class="card-body">
                <form asp-action="Create" method="post">
                    <!-- Initial Balance with 2 decimal precision -->
                    <div class="form-group mb-3">
                        <label asp-for="Balance" class="form-label">Initial Balance</label>
                        <input asp-for="Balance"
                               class="form-control"
                               placeholder="Enter initial balance"
                               step="0.01"
                               min="0.00"
                               max="1000000000000"
                               type="number"
                               required />
                    </div>

                    <!-- Currency -->
                    <div class="form-group mb-4">
                        <label asp-for="Currency" class="form-label">Currency</label>
                        <select asp-for="Currency" class="form-control">
                            @foreach (var currency in Enum.GetValues(typeof(Currency)))
                            {
                                <option value="@currency">@currency</option>
                            }
                        </select>
                        <span asp-validation-for="Currency" class="text-danger"></span>
                    </div>

                    <!-- Submit -->
                    <div class="text-center">
                        <button type="submit" class="btn btn-glow">Create Account</button>
                    </div>
                </form>

                <!-- Back button -->
                <div class="text-center mt-3">
                    <a href="@Url.Action("MyAccounts", "Client")" class="btn-glow-secondary">Back to My Accounts</a>
                </div>
            </div>
        </div>
    </div>
</div>